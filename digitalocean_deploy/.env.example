# CasaMX Production Environment Variables

# Application
ENV=production
SECRET_KEY=your-secret-key-change-me-to-random-string
DEBUG=False

# Database
DATABASE_URL=sqlite:///data/casamx.db

# Redis
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=casamx-redis-password

# Domain
DOMAIN=casamx.store
EMAIL=tu-email@example.com

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
ALLOWED_HOSTS=casamx.store,www.casamx.store,localhost
CORS_ORIGINS=https://casamx.store,https://www.casamx.store

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=INFO

# Performance
CACHE_TTL=3600
MAX_REQUESTS_PER_MINUTE=100

# DigitalOcean (optional)
DO_TOKEN=your-digitalocean-token
DO_REGION=nyc1

# Backup
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7